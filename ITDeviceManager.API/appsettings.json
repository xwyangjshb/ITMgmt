{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ITDeviceManagerDB;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 10,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "CHANGE_THIS_TO_A_SECURE_KEY_IN_PRODUCTION_AT_LEAST_32_CHARACTERS_LONG",
    "Issuer": "ITDeviceManager",
    "Audience": "ITDeviceManagerAPI",
    "ExpirationMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:5173",
      "https://localhost:5173",
      "http://localhost:5095",
      "http://0.0.0.0:5095"
    ]
  },
  "DeviceDiscovery": {
    "ScanIntervalMinutes": 30,
    "RetryDelayMinutes": 5,
    "OfflineThresholdMinutes": 60
  },
  "MagicPacketMonitoring": {
    "EnableMonitoring": true,
    "ListenPort7": true,
    "ListenPort9": true,
    "MaxCapturesRetained": 10000,
    "RetentionDays": 30
  }
}
